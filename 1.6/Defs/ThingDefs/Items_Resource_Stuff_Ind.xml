<Defs>
  <!-- ================ Concrete ================ -->
  <ThingDef ParentName="StoneBlocksBase">
    <defName>Ind_Concrete</defName>
    <label>concrete</label>
    <description>widely used construction material.</description>
    <graphicData>
      <texPath>Ind/Stuff/Concrete</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Stone_Drop</soundInteract>
    <soundDrop>Stone_Drop</soundDrop>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <MarketValue>4.9</MarketValue>
      <Mass>1</Mass>
      <StuffPower_Armor_Sharp>0.1</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.2</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.1</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>2</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>1</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.1</SharpDamageMultiplier>
      <BluntDamageMultiplier>1.2</BluntDamageMultiplier>
      <Beauty>-12</Beauty>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <burnableByRecipe>false</burnableByRecipe>
    <minRewardCount>10</minRewardCount>
    <deepCommonality>0.75</deepCommonality>
    <deepCountPerPortion>15</deepCountPerPortion>
    <deepLumpSizeRange>
      <min>0</min>
      <max>1</max>
    </deepLumpSizeRange>
    <stuffProps>
      <constructEffect>ConstructDirt</constructEffect>
      <color>(122,122,120)</color>
      <soundImpactBullet>BulletImpact_Ground</soundImpactBullet>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <stuffAdjective>concrete</stuffAdjective>
      <appearance>Planks</appearance>
      <statOffsets>
        <WorkToBuild>140</WorkToBuild>
        <Beauty>0</Beauty>
      </statOffsets>
      <statFactors>
        <Beauty>1</Beauty>
        <MarketValue>0.45</MarketValue>
        <MaxHitPoints>1.55</MaxHitPoints>
        <WorkToBuild>2.0</WorkToBuild>
        <DoorOpenSpeed>0.7</DoorOpenSpeed>
        <WorkToMake>1.2</WorkToMake>
      </statFactors>
    </stuffProps>
    <allowedArchonexusCount>100</allowedArchonexusCount>
  </ThingDef>
